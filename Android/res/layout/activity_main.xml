<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center">
	    
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:padding="15dp"
	        android:contentDescription="@string/CLAPPAY"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter"
	        android:src="@drawable/hamstatus" />
	    
	    <LinearLayout
	        android:id="@+id/godLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="15dp"
	        android:layout_below="@+id/imageView1"
	        android:gravity="center"
	        android:orientation="horizontal" >
	
		    <LinearLayout
		        android:id="@+id/linlayout1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_marginRight="20dp"
		        android:orientation="vertical" >
		
		        <Button
		            android:id="@+id/characters"
		            android:paddingTop="14sp"
		            android:paddingRight="14sp"
		            android:paddingLeft="14sp"
		            style="?android:attr/borderlessButtonStyle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableTop="@drawable/allcharacters"
		            android:onClick="allChars"
		            android:text="@string/characters"
		            android:textSize="@dimen/abs__action_bar_subtitle_text_size" />
		
		        <Button
		            android:id="@+id/morestats"
		            android:layout_marginTop="15dp"
		            android:paddingTop="14sp"
		            android:paddingRight="14sp"
		            android:paddingLeft="14sp"
		            style="?android:attr/borderlessButtonStyle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableTop="@drawable/favorites"
		            android:onClick="showFavorites"
		            android:text="@string/favorites"
		            android:textSize="@dimen/abs__action_bar_subtitle_text_size" />
		        
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/linlayout2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_marginLeft="20dp"
		        android:orientation="vertical" >
		
		        <Button
		            android:id="@+id/stat_overview"
		            android:paddingTop="14sp"
		            android:paddingRight="14sp"
		            android:paddingLeft="14sp"
		            style="?android:attr/borderlessButtonStyle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableTop="@drawable/stats"
		            android:onClick="goToOverview"
		            android:text="@string/stats"
		            android:textSize="@dimen/abs__action_bar_subtitle_text_size" />
		
		        <Button
		            android:id="@+id/about"
		            android:layout_marginTop="15dp"
		            android:paddingTop="14sp"
		            android:paddingRight="14sp"
		            android:paddingLeft="14sp"
		            style="?android:attr/borderlessButtonStyle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableTop="@drawable/about"
		            android:onClick="about"
		            android:text="@string/about"
		            android:textSize="@dimen/abs__action_bar_subtitle_text_size" />

		    </LinearLayout>
	    </LinearLayout>
	
	</RelativeLayout>
</ScrollView>