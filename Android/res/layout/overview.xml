<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10sp"
	    android:gravity="center">
	    
	    <TextView
	        android:id="@+id/ranking"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:textSize="@dimen/ranking"/>
	    
	    <TextView
	        android:id="@+id/character_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ranking"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:text="@string/character_title"
	        android:textSize="@dimen/ranking"
	        android:textStyle="bold"/>
	    
	    <TableLayout
            android:id="@+id/character_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/character_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
            </TableRow>
        </TableLayout>
	    
	    <TextView
	        android:id="@+id/complain"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/character_layout"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="5dp"
	        android:textSize="12sp" />
	    
	    <TextView
	        android:id="@+id/top10_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/complain"
	        android:layout_centerHorizontal="true"
	        android:text="@string/top10_title"
	        android:textSize="@dimen/ranking"
	        android:textStyle="bold" />
  
	    <TableLayout
            android:id="@+id/my_table_layout"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/top10_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
            </TableRow>
        </TableLayout>
	
	</RelativeLayout>
</ScrollView>